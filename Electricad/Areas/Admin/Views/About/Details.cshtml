@model Electricad.Data.About
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Details</h2>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <a href="index.html" class="list-group-item active main-color-bg">
                    <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Menu
                </a>
                <a asp-area="Admin" asp-controller="Offers" asp-action="Index" class="list-group-item"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Offers  <span class="badge badge-danger">EDIT</span></a>
                <a asp-area="Admin" asp-controller="About" asp-action="Details" class="list-group-item"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> About <span class="badge badge-danger"> EDIT</span></a>
                <a asp-area="Admin" asp-controller="Portfolio" asp-action="Index" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Portfolio <span class="badge badge-danger">EDIT</span></a>
            </div>
        </div>

        <div class="col-md-9">
            <!-- Website Overview -->
            <div class="panel panel-default">
                <div class="panel-heading main-color-bg">
                    <h3 class="panel-title">Panel</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-8">
                            <div class="col-sm-8">
                                <label>About Description: </label>
                                <div>@Html.DisplayFor(model => model.about_desc)</div>
                            </div>
                            <div class="col-sm-10" style="width: 300px;">
                                <label>Image: </label>
                                <div>
                                    <img src="@Html.DisplayFor(model => model.about_file)" width="300" />
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <a class="btn btn-primary" style="width: 165px;" asp-action="Edit" asp-route-id="@Model.Userid">Edit</a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

 