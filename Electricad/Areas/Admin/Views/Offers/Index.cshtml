@model Electricad.Data.Offers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
 
<h2>Portfolio</h2>
<div class="col-6 text-right">
    <a asp-action="Create" class="btn btn-danger" style="margin-bottom: 15px;"><i class="fas fa-plus"></i> Include a new Image</a>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <a href="index.html" class="list-group-item active main-color-bg">
                    <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Menu
                </a>
                <a asp-action="Index" class="list-group-item"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Offers  <span class="badge badge-danger">EDIT</span></a>
                <a asp-area="Admin" asp-controller="About" asp-action="Details" class="list-group-item"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> About <span class="badge badge-danger"> EDIT</span></a>
                <a asp-area="Admin" asp-controller="Portfolio" asp-action="Index" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Portfolio <span class="badge badge-danger">EDIT</span></a>

            </div>


        </div>


        <div class="col-md-9">
            <!-- Website Overview -->

            <div class="panel panel-default">
                <div class="panel-heading main-color-bg">
                    <h3 class="panel-title">Panel</h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="tblSliders" class="table table-striped table-bordered text-center" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th>Discount %</th>
                                    <th>Comment</th>
                                    <th>Image</th>

                                    <th></th>

                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>



            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="/Admin/js/slider.js"></script>
}