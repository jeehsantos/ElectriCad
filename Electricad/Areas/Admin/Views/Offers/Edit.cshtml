@model Electricad.Data.Offers

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h3 class="text-center">Editar articulo</h3>
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="id" />
    <div class="row" px-2 mx-2 border>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="descount"></label>
                </div>
                <div class="col-8">
                    <input asp-for="descount" class="form-control" />
                    <span asp-validation-for="descount" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="desc"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="desc" class="form-control" style="height: 300px;"></textarea>
                    <span asp-validation-for="desc" class="text-danger"></span>
                </div>
            </div>

             
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="offer_file"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.id">Update</button>

                        </div>

                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4 pt-3">
            <img src="@Model.offer_file" width="100%" height="50%" style="border-radius: 5px; border: 1px solid #bbb9b9;" />
        </div>
    </div>
</form>

@section Scripts{

}

