@using Electricad;
@model Electricad.Models.ViewModel


@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">

    <!-- ======= Hero Section ======= -->
    <section id="hero">
        <div class="hero-container">
            <div id="heroCarousel" class="carousel slide carousel-fade" data-ride="carousel">

                <ol class="carousel-indicators" id="hero-carousel-indicators"></ol>

                <div class="carousel-inner" role="listbox">

                    <!--Offers sliders -->
                    @if (Model.Offers != null)
                    {
                        var x = 0;
                        @foreach (var item in Model.Offers)
                        {
                            
                            //Check if it is the first slide to show the introduction with the image uploaded
                            if (x == 0)
                            {
                                x++;
                                <!-- Slide 1 -->
                                <div class="carousel-item active" style="background-image: url('@item.offer_file');">
                                    <div class="carousel-container">
                                        <div class="carousel-content container">
                                            <h2 class="animate__animated animate__fadeInDown">Welcome to <span>Electricad</span></h2>
                                            <p class="animate__animated animate__fadeInUp">For any electrical installation issues, electrical fault identification and repairs, or for emergency call-out services at any time.</p>
                                            <a href="#contact" class="btn-get-started animate__animated animate__fadeInUp scrollto">Contact us Now</a>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                x++;
                                <div class="carousel-item" style="background-image: url('@item.offer_file');">
                                    <div class="carousel-container">
                                        <div class="carousel-content container">
                                            <h2 class="animate__animated animate__fadeInDown">Electricad</h2>
                                            <p class="animate__animated animate__fadeInUp">@item.desc</p>
                                            <a href="#contact" class="btn-get-started animate__animated animate__fadeInUp scrollto">% @item.discount Discount !</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }

                </div>

                <a class="carousel-control-prev" href="#heroCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon icofont-rounded-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#heroCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon icofont-rounded-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>

            </div>
        </div>
    </section><!-- End Hero -->
    <!-- ======= About Us Section ======= -->
    <section id="about" class="about">
        <div class="container">

            <div class="row no-gutters">
                <div class="col-lg-6 video-box">
                    <img src="@Html.DisplayFor(model => model.About.about_file)" class="img-fluid" alt="">
                </div>
                <div class="col-lg-6 d-flex flex-column justify-content-center about-content">
                    <div class="section-title">
                        <ul><a class="titlebtn">About us</a></ul> <br>
                        <p>@Html.DisplayFor(model => model.About.about_desc )</p>
                        <div class="icon-box" data-aos="fade-up" data-aos-delay="100">
                            <div class="icon">
                                <i class="bx bx-bulb"></i>
                            </div>
                            <h4 class="title"><a href="">Vision</a></h4>
                            <p class="description">
                                To see and understand the electrical issues as a client who wants to express and explain to an electrical technician
                                In simple words and with the expertise of our staff find the solutions together.
                            </p>
                        </div>
                        <div class="icon-box" data-aos="fade-up" data-aos-delay="100">
                            <div class="icon"><i class="bx bx-bullseye"></i></div>
                            <h4 class="title"><a href="">Mission</a></h4>
                            <p class="description"> To bring all the experience passion and expertise to finish every job with the best quality and following the New Zealand standard and regulations to leave our clients satisfied</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End About Us Section -->
