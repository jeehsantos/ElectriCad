    <!-- ======= Cta Section ======= -->
    <section id="cta" class="cta">
        <div class="container" data-aos="zoom-in">
            <div class="text-center">
                <h1>LOOKING FOR A ELECTRICIAN?</h1>
                <h3> Electricad is Canterbury and the surrounding areas – We promise that you will get a prompt answer! </h3>
                <a class="cta-btn" href="tel:220270465">CALL NOW</a><br><br>
                <p>Right now for all of your household and business electrical installation and maintenance needs.</p>
            </div>
        </div>
    </section><!-- End Cta Section -->
    <!-- ======= Portfolio Section ======= -->
    <section id="portfolio" class="portfolio">
        <div class="container" data-aos="fade-up">
            <div class="section-title">
                <ul> <a @Url.RouteUrl("index.html") class="titlebtn">Portfolio</a></ul><br>
                <p>We think that trust should be earned through some pretty good results. </p>
            </div>

            <div class="row" data-aos="fade-up" data-aos-delay="100">
                <div class="col-lg-12 d-flex justify-content-center">
                    <ul id="portfolio-flters">
                        <li data-filter=".1">Residential</li>
                        <li data-filter=".4">Solar Panels</li>
                        <li data-filter=".3">Switchboards</li>
                        <li data-filter=".2">Commertial</li>
                        <li data-filter=".5">Design</li>
                        <li data-filter="*" class="filter-active">All</li>
                    </ul>
                </div>
            </div>

            <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
                @foreach(var item in Model.Portfolio) { 
                    <div class='col-lg-4 col-md-6 portfolio-item @item.Sectorsid'>
                        <div class="portfolio-wrap">
                            <img src='@item.port_file' class="img-fluid" alt="">
                            <div class="portfolio-info">
                                <div class="portfolio-links">
                                    <a href="#" data-gallery="portfolioGallery" class="portfolio-lightbox" title="App 1"></a>
                                    <a @Url.RouteUrl("portfolio-details.html") title="More Details"></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section><!-- End Portfolio Section -->
    <!------- TESTIMONIALS ---------->
    <section id="testimonials" class="testimonials">
        <div class="container" data-aos="fade-up">
            <div class="section-title">
                <ul><a href="index.html" class="tittle">Experiences</a></ul> <br>
                <p>Our customers love us! Read what they have to say about Electricad services below.</p>
            </div>
        </div>

        <div class="container-fluid">

            <div class="row justify-content-center" data-aos="fade-up" data-aos-delay="100">
                <div class="col-xl-10">
                    <div class="owl-carousel testimonials-carousel">
                        @if (Model.Reviews != null)
                        {
                            @foreach (var item in Model.Reviews)
                            {
                                <div class="testimonial-wrap">
                                    <div class="testimonial-item">
                                        <p>
                                            <i class="bx bxs-quote-alt-left quote-icon-left"></i>"@item.comment"
                                            <i class="bx bxs-quote-alt-right quote-icon-right"></i>
                                        </p>
                                        <h3>
                                            @item.name
                                        </h3>
                                        <h4>@item.dateComment</h4>
                                    </div>
                                </div>
                            }


                        }

                        else
                        {
                            <div>Nothing to show</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--End experiences-->
    <!-- ======= Contact Us Section ======= -->
    <section id="contact" class="contact">
        <div class="container">
            <div class="section-title">
                <ul> <a href="index.html" class="titlebtn">Contact us</a></ul>
            </div>

            <div class="row">

                <div class="col-lg-4 d-flex align-items-stretch" data-aos="fade-up">
                    <div class="info-box">
                        <i class="bx bx-map"></i>
                        <h3>Location</h3>
                        <p><a href="#">
                                    13 Pavilion Crescent, <br>
                                    Hillmorton Christchurch 8024, NZ
                           </a></p>
                    </div>
                </div>

                <div class="col-lg-4 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="200">
                    <div class="info-box ">
                        <i class="bx bx-phone-call"></i>
                        <h3>Call us</h3>
                        <h3><a href="tel:220270465">+64 22 027 0465</a> </h3>
                    </div>
                </div>

                <div class="col-lg-4 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100">
                    <div class="info-box">
                        <i class="bx bx-envelope"></i>
                        <h3>Email Us</h3>
                        <p><a href="mailto:electricad2010@gmail.com">electricad2010@gmail.com</a></p>
                    </div>
                </div>

                <div class="col-lg-12" data-aos="fade-up" data-aos-delay="300">
                    <form method="post" id="form" enctype="multipart/form-data" asp-controller="home" asp-action="index">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-row">

                            <div class="col-lg-6 form-group">
                                <input type="text" asp-for="Forms.Name" class="form-control" id="name" placeholder="Full Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                                <div class="validate"></div>
                                <span class="text-danger field-validation-valid" id="name_error_message"  ></span>
                            </div>
                            <div class="col-lg-6 form-group">
                                <input type="text" asp-for="Forms.Phone" class="form-control" id="phone" placeholder="Phone number" data-rule="minlen:4" data-msg="Please enter at least 9 chars" />
                                <div class="validate"></div>
                            </div>
                            <div class="col-lg-6 form-group">
                                <input type="email" class="form-control" asp-for="Forms.Email" id="email" placeholder="Email" data-rule="email" data-msg="Please enter a valid email" />
                                <div class="validate" id="email_error_message"></div>
                            </div>
                            <div class="col-lg-6 form-group">
                                <input type="text" asp-for="Forms.Address" class="form-control" id="address" placeholder="Address" data-rule="minlen:4" data-msg="Please enter at least 8 chars" />
                                <div class="validate"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <select type="text" class="form-control" asp-for="Forms.Subject" id="subject" placeholder="Subject" data-rule="minlen:4" data-msg="Please select at least 1 option of subject">
                                <option selected>Subject</option>
                                <option value="1">Make a quote</option>
                                <option value="2">Leave a comment</option>
                                <div class="validate"></div>
                            </select>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="attachments" name="attachments" multiple="multiple" aria-describedby="customFileInput">
                                    <label class="custom-file-label" for="customFileInput">Select file</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" asp-for="Forms.Content" id="message" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Message"></textarea>
                            <div class="validate"></div>
                        </div>
                        <div class="my-3">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>
                             <label id="message_error_message"></label>
                        </div>
                        <div class="text-center"><button class="submit-button" type="submit">Send Message</button></div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- End Contact Us Section -->

</main><!-- End #main -->